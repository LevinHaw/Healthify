<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ctr_bg"
    tools:context=".Diarrhea">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:backgroundTint="@color/bluelight"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ctr_bg"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="Diarrhea">

            <ImageView
                android:layout_width="220dp"
                android:layout_height="180dp"
                android:layout_gravity="center|end"
                android:layout_marginBottom="15dp"
                android:src="@drawable/diarrheas"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_bg"
        android:padding="20dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="Diarrhea is the passage of unusually loose or watery stools, usually at least three times in a 24 hour period. However, it is the consistency of the stools rather than the number that is most important. Frequent passing of formed stools is not diarrhea."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="People with diarrhea may also have one or more of the following symptoms :"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	an urgent need to use the bathroom"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	cramping"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	loss of control of bowel movements"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	nausea"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	pain in the abdomen"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="People with diarrhea caused by some infections may also have one or more of the following symptoms :"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	bloody stools"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	fever and chills"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	light-headedness and dizziness"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	vomiting"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="What causes diarrhea?"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="The most common causes of diarrhea include : "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	bacteria from contaminated food or water"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:text="•	viruses such as the flu, norovirus, or rotavirus . Rotavirus is the most common cause of acute diarrhea in children"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:text="•	parasites, which are tiny organisms found in contaminated food or water"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	medicines such as antibiotics, cancer drugs, and antacids that contain magnesium"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	food intolerances and sensitivities, which are problems digesting certain ingredients or foods. An example is lactose intolerance."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:text="•	diseases that affect the stomach, small intestine, or colon, such as Crohn's disease"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:text="•	problems with how the colon functions, such as irritable bowel syndrome"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="Diarrhea treatment"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:text="•	diarrhea is treated by replacing lost fluids and electrolytes to prevent dehydration. Depending on the cause of the problem, you may need medicines to stop the diarrhea or treat an infection."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:text="•	adults with diarrhea should drink water, fruit juices, sports drinks, sodas without caffeine, and salty broths. As your symptoms improve, you can eat soft, bland food."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:text="•	children with diarrhea should be given oral rehydration solutions to replace lost fluids and electrolytes."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="Reference"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_refdi1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="@string/_1_diarrhea"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_refdi2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="@string/_2_diarrhea"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_refdi3"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="@string/_3_diarrhea"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>