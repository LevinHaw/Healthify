<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ctr_bg"
    tools:context=".Dengue_fever">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:backgroundTint="@color/bluelight"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ctr_bg"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="Dengue fever">

            <ImageView
                android:layout_width="220dp"
                android:layout_height="180dp"
                android:layout_gravity="center|end"
                android:layout_marginBottom="15dp"
                android:src="@drawable/fevers"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />



        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_bg"
        android:padding="20dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="Dengue hemorrhagic fever is an infectious disease caused by the dengue virus and is transmitted through the bite of Aedes aegypti mosquito. The main clinical symptoms are high fever, hemorrhagic manifestations, hepatomegaly, and signs of circulatory failure until the onset of shock (dengue shock syndrome) as a result of plasma leakage that can cause death. Risk factors that could affect the occurrence of dengue fever are: the home environment (within the home, home layout, types of containers, altitude and climate), environmental biology, and social environment."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="Dengue"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="Dengue should be suspected when a high fever (40°C/104°F) is accompanied by 2 of the following symptoms during the febrile phase :"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	severe headache"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	pain behind the eyes"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	muscle and joint pains"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	nausea"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	vomiting"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	swollen glands"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	rash"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="Severe dengue"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="A patient enters what is called the critical phase normally about 3-7 days after illness onset. It is at this time, when the fever is dropping (below 38°C/100°F) in the patient, that warning signs associated with severe dengue can manifest. Severe dengue is a potentially fatal complication, due to plasma leaking, fluid accumulation, respiratory distress, severe bleeding, or organ impairment."
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="Warning signs that doctors should look for include :"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	severe abdominal pain"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	persistent vomiting"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	rapid breathing"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	bleeding gums"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	fatigue"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	restlessness"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="•	blood in vomit"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/acme"
                android:justificationMode="inter_word"
                android:padding="10dp"
                android:text="Reference"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_refD1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="@string/_1_dengue"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_refD2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="@string/_2_dengue"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_refD3"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/acme"
                android:text="@string/_3_dengue"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>